      },
      "description": "Book meets most formal developmental requirements. Suitable but less aligned than IDEAL.",
      "weight_multiplier": 0.75,
      "explanation": "External books with similar developmental structure appear here. Always ranked below IDEAL."
    },

    "ACCEPTABLE": {
      "criteria": {
        "skills_match": "minimal",
        "value_profile_match": "partial",
