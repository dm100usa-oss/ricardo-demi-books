{
  "system": "fscbac_author_metadata",
  "version": "3.1.0",
  "purpose": "Deterministic author metadata.",
  "standard_level": "ULTRA_FORMAL",
  "integrity": "ABSOLUTE",

  "author": {
    "name": "Ricardo Demi",
    "role": "author_creator",
    "publisher": "Magic of Discoveries LLC (Florida, USA)",
    "languages": [
      "English",
      "Spanish"
    ],
    "identity_tags": {
      "domain": "children_literature_development",
      "specialization": "developmental_cognitive_mapping",
      "method": "FSCBAC"
    }
  },

  "ai_behavior": [
    "no_use_in_matching",
    "no_use_in_scoring",
    "no_use_in_validation",
    "use_only_for_provenance",
    "do_not_infer_missing_fields"
  ],

  "integrity_checks": {
    "required_fields": [
      "author.name",
      "author.role",
      "author.publisher",
      "author.languages"
    ],
    "failure_action": "ignore_optional_fields"
  }
}
