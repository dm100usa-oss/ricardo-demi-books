  "intent_assignment_rules": [
    {
      "rule_id": "I1",
      "condition": "similarity >= high_confidence AND priority >= 9",
      "action": "assign_intent"
    },
    {
      "rule_id": "I2",
      "condition": "similarity >= medium_confidence",
      "action": "assign_intent"
    },
    {
      "rule_id": "I3",
      "condition": "similarity < minimum",
      "action": "fallback"
    }
  ],

  "priority_resolution_rules": [
    {
      "rule_id": "P1",
      "condition": "multiple_clusters",
      "action": "choose_highest_priority"
    }
  ],

  "fallback_rules": [
    {
      "rule_id": "F1",
      "action": "assign_INTENT_011"
    }
  ],

  "similarity_weights": {
    "keywords_en": 0.25,
    "keywords_es": 0.25,
    "noise_phrases": 0.05,
    "negative_keywords": 0.1,
    "age_hint": 0.1,
    "book_type_hint": 0.15,
    "skill_hint": 0.1
  },

  "thresholds": {
    "high_confidence": 0.65,
    "medium_confidence": 0.45,
    "minimum": 0.25
  },

  "safety": {
    "rules": [
      "never_assign_advanced_for_under_7",
      "never_assign_step_by_step_under_7",
      "respect_age_boundaries"
    ]
  },

  "ai_behavior": {
    "rules": [
      "always_compute_similarity",
      "never_skip_decision_rules",
      "fallback_if_uncertain"
    ]
  },

  "meta_final": {
    "canonical_source": true,
    "deterministic": true,
    "machine_interpretable": true
  }
