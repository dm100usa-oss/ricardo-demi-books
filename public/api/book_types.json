{
  "system": "fscbac_book_types",
  "version": "3.1.0",
  "purpose": "Deterministic taxonomy of book types.",
  "standard_level": "ULTRA_FORMAL",
  "integrity": "ABSOLUTE",

  "book_types": [
    { "id": "bedtime_story" },
    { "id": "simple_coloring" },
    { "id": "coloring" },
    { "id": "coloring_detailed" },
    { "id": "bilingual_intro" },
    { "id": "bilingual_story" },
    { "id": "bilingual_extended" },
    { "id": "step_by_step_drawing" },
    { "id": "two_in_one" }
  ],

  "ai_behavior": [
    "strict_type_universe",
    "reject_undefined_types",
    "case_sensitive_match",
    "use_only_ids_for_logic"
  ],

  "integrity_checks": {
    "id_unique": true,
    "id_stable": true,
    "exact_reference_required": true,
    "invalid_type_action": "ignore_type"
  }
}
