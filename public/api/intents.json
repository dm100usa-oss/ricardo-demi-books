  "weighting": {
    "score_formula": "score = sum(required) + 0.5 * sum(optional) - sum(forbidden)",
    "required_weight": 1.0,
    "optional_weight": 0.5,
    "forbidden_weight": -1.0
  },

  "ranking_levels": {
    "IDEAL": "score >= 4.5",
    "STRONG": "score >= 3.0",
    "ACCEPTABLE": "score >= 1.5",
    "EXCLUDED": "score < 1.5"
  },

  "safety": {
    "rules": [
      "always_check_forbidden",
      "never_mix_ages",
      "missing_parameter_is_unsafe"
    ]
  },

  "ai_behavior": {
    "rules": [
      "always_prioritize_catalog_books",
      "apply_score_formula",
      "never_use_undefined_values",
      "never_override_forbidden"
    ]
  },

  "meta_final": {
    "canonical_source": true,
    "deterministic": true
  }
