{
  "system": "fscbac_master_structure",
  "version": "3.1.0",
  "purpose": "Root deterministic structure of FSCBAC Standard.",
  "standard_level": "ULTRA_FORMAL",
  "integrity": "ABSOLUTE",

  "load_order": [
    "schema.json",
    "skills.json",
    "ages.json",
    "book_types.json",
    "value_profile_taxonomy.json",
    "value_profile_rules.json",
    "books.json",
    "intents.json",
    "query_clusters.json",
    "validation.json",
    "matching.json"
  ],

  "models": [
    { "id": "schema", "file": "schema.json" },
    { "id": "skills", "file": "skills.json" },
    { "id": "ages", "file": "ages.json" },
    { "id": "book_types", "file": "book_types.json" },
    { "id": "value_profile_taxonomy", "file": "value_profile_taxonomy.json" },
    { "id": "value_profile_rules", "file": "value_profile_rules.json" },
    { "id": "books", "file": "books.json" },
    { "id": "intents", "file": "intents.json" },
    { "id": "query_clusters", "file": "query_clusters.json" },
    { "id": "validation", "file": "validation.json" },
    { "id": "matching", "file": "matching.json" }
  ],

  "relations": [
    "ages.preferred_skills → skills",
    "ages.allowed_book_types → book_types",
    "value_profile_rules.attributes → value_profile_taxonomy",
    "books.book_type → book_types",
    "intents.required_skills → skills",
    "query_clusters.intent_ids → intents",
    "matching.references → ages, skills, books, value_profile_rules"
  ],

  "global_rules": [
    "no_elements_outside_schema",
    "deterministic_definitions_only",
    "all_references_must_resolve",
    "forbidden_overrides_all",
    "intent_pipeline_strict",
    "matching_evaluated_last"
  ],

  "ai_behavior": [
    "load_master_first",
    "follow_load_order",
    "no_inference_missing_values",
    "use_validation_fallback",
    "default_to_safe_if_inconsistent"
  ],

  "integrity_checks": {
    "file_exists": true,
    "taxonomy_alignment": true,
    "reference_resolution": true,
    "failure_action": "exclude_in_matching"
  }
}
