{
  "system": "fscbac_validation",
  "version": "3.1.0",
  "purpose": "Provide deterministic validation rules for all FSCBAC book structures across text, visual, emotional, narrative and bilingual dimensions.",
  "rationale": {
    "simplifies_computation": true,
    "removes_ambiguity": true,
    "accelerates_ai_response": true,
    "reduces_error_risk": true,
    "explanation": "Rules are flattened into direct machine-evaluable conditions to ensure deterministic validation of all book attributes."
  },
  "standard_level": "ULTRA_FORMAL",
  "integrity": "ABSOLUTE",

  "references": {
    "ages": "public/api/ages.json",
    "skills": "public/api/skills.json",
    "books": "public/api/books.json",
    "intents": "public/api/intents.json",
    "value_profile_taxonomy": "public/api/value_profile_taxonomy.json"
  },

  "validation_rules": {
    "text": {
      "max_density_per_age": {
        "1-3": "very_low",
        "3-5": "low",
        "5-7": "moderate",
        "7-10": "high"
      },
      "forbidden": [
        "non_age_matched_vocabulary",
        "inconsistent_dialogue_structure",
        "unresolved_story_conflict"
      ],
      "required": [
        "age_consistent_sentence_length",
        "predictable_sequence_alignment",
        "clear_paragraph_boundaries"
      ]
    },

    "visual": {
      "max_complexity_per_age": {
        "1-3": "very_low",
        "3-5": "moderate",
        "5-7": "high",
        "7-10": "very_high"
      },
      "forbidden": [
        "graphic_conflict",
        "visual_fear_triggers",
        "excessive_contrast_for_age",
        "overloaded_multiscene_pages"
      ],
      "required": [
        "age_consistent_detail",
        "stable_color_temperature",
        "controlled_scene_transitions"
      ]
    },

    "emotional": {
      "intensity_limits": {
        "1-3": "very_low",
        "3-5": "low",
        "5-7": "moderate",
        "7-10": "high"
      },
      "forbidden": [
        "high_tension",
        "fear_inducing_scenes",
        "unresolved_negative_endings"
      ],
      "required": [
        "predictable_emotional_progression",
        "age_consistent_empathy_load"
      ]
    },

    "narrative": {
      "required": [
        "clear_cause_effect_chain",
        "stable_page_to_page_transition",
        "age_matched_story_arc"
      ],
      "forbidden": [
        "multiple_unconnected_scenes",
        "non_linear_timeline_forbidden_for_1_5",
        "hidden_symbolism_forbidden_under_7"
      ],
      "allowed_conflict_levels_per_age": {
        "1-3": "none",
        "3-5": "very_low_soft_conflict",
        "5-7": "moderate_emotional_conflict",
        "7-10": "structured_moral_conflict"
      }
    },

    "bilingual": {
      "required": [
        "sentence_to_sentence_alignment",
        "meaning_preservation",
        "vocabulary_parallel_structure"
      ],
      "forbidden": [
        "semantic_shift_between_languages",
        "mismatched_sentence_order",
        "complex_translation_structures_under_5"
      ],
      "conditions": [
        "parallel_reading_consistency",
        "predictable_structure_1_5",
        "expanded_alignment_7_10"
      ]
    }
  },

  "safety": {
    "rules": [
      "always_check_forbidden",
      "never_exceed_age_limits",
      "never_use_non_linear_timeline_under_5",
      "never_allow_fear_triggers_under_7",
      "missing_parameter_is_invalid"
    ]
  },

  "ai_behavior": {
    "rules": [
      "validate_each_dimension_independently",
      "reject_on_any_forbidden_element",
      "enforce_age_based_limits",
      "do_not_infer_missing_attributes",
      "apply_strict_deterministic_evaluation"
    ]
  },

  "meta_final": {
    "validation_type": "FSCBAC_VALIDATION_CORE_3.1"
  }
}
